<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.borregobrothers.jrose.antibioticornot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- List Activities for App -->
        <!-- IMPORTANT ==> Add another activity tag so the app knows there is more than one -->
        <activity
            android:name=".TitleScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainQuestionnaireActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>