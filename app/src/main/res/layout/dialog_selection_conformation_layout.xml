<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.borregobrothers.jrose.antibioticornot.MainQuestionnaireActivity">


    <LinearLayout
        android:id="@+id/selectionConformationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feverTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_dialog_title_text"
            android:textSize="30sp"
            android:textColor="@color/colorBackground"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/feverInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_conformation_info_text"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:padding="10dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/selectionConformationContainer"
            android:padding="10dp">

            <Button
                android:id="@+id/yesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/noButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>